// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       String   @id @default(uuid())
  nome     String
  email    String   @unique
  senha    String
  criadoEm DateTime @default(now())
}

model Recorte {
  id             String   @id @default(uuid())
  nomeModelo     String
  ordemExibicao  Int
  sku            String   @unique
  tipoRecorte    String
  posicao        String
  tipoProduto    String
  material       String
  cor            String
  imagemUrl      String
  criadoEm       DateTime @default(now())
}
